<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.cbioportal.persistence.clickhouse.mapper.PatientMapper">

    <sql id="select">
        sample.patientInternalId AS "${prefix}internalId",
        sample.patientStableId AS "${prefix}stableId"
<!--        patient.CANCER_STUDY_ID AS "${prefix}cancerStudyId", -->
		<if test="projection != 'DETAILED'">
		    ,
	        sample.cancerStudyIdentifier AS "${prefix}cancerStudyIdentifier"
        </if>
        <if test="projection == 'DETAILED'">
            ,
            <include refid="org.cbioportal.persistence.clickhouse.mapper.StudyMapper.select">
                <property name="prefix" value="${prefix}"/>
            </include>
        </if>
    </sql>

    <sql id="where">
        <where>
            <if test="keyword == null">
                <if test="patientIds == null and studyIds != null">
                    cancerStudyIdentifier = #{studyIds[0]}
                </if>
                <if test="patientIds != null">
                    (cancerStudyIdentifier, patientStableId) IN
                    <foreach index="i" collection="patientIds" open="(" separator="," close=")">
                        (#{studyIds[${i}]}, #{patientIds[${i}]})
                    </foreach>
                </if>
            </if>
            <if test="keyword != null">
                <foreach item="item" collection="keyword.split(' ')" open="(" separator=") AND (" close=")">
                    patientStableId like CONCAT('%', #{item}, '%')
                    OR
                    stableId like CONCAT('%', #{item}, '%')
                </foreach>
            </if>
        </where>
    </sql>

    <select id="getPatients" resultType="org.cbioportal.model.Patient">
        SELECT
        <include refid="select">
            <property name="prefix" value=""/>
        </include>
        FROM sample
        <if test="projection == 'DETAILED'">
        	INNER JOIN cancer_study ON sample.cancerStudyIdentifier = cancer_study.cancerStudyIdentifier
        </if>
        
        <include refid="where"/>
        <if test="sortBy != null and projection != 'ID' and keyword == null">
            ORDER BY "${sortBy}" ${direction}
        </if>
        <if test="projection == 'ID' and keyword == null">
            ORDER BY patientStableId ASC
        </if>
        <if test="keyword != null">
            ORDER BY CASE WHEN patientStableId LIKE CONCAT(#{keyword}, '%') THEN 0 ELSE 1 END, patientStableId
        </if>
        <if test="limit != null and limit != 0">
            LIMIT #{limit} OFFSET #{offset}
        </if>
    </select>

    <select id="getMetaPatients" resultType="org.cbioportal.model.meta.BaseMeta">
        SELECT
        COUNT(*) AS totalCount
        FROM sample
        <if test="projection == 'DETAILED'">
        	INNER JOIN cancer_study ON sample.cancerStudyIdentifier = cancer_study.cancerStudyIdentifier
        </if>
        <include refid="where"/>
    </select>

    <select id="getPatient" resultType="org.cbioportal.model.Patient">
        SELECT
        <include refid="select">
            <property name="prefix" value=""/>
        </include>
        FROM sample
        <if test="projection == 'DETAILED'">
        	INNER JOIN cancer_study ON sample.cancerStudyIdentifier = cancer_study.cancerStudyIdentifier
        </if>
        WHERE sample.patientStableId = #{patientId}
        AND cancerStudyIdentifier = #{studyId}
    </select>

    <select id="getPatientsOfSamples" resultType="org.cbioportal.model.Patient">
        SELECT
        	patientStableId,
	        cancerStudyIdentifier
        FROM sample
        INNER JOIN cancer_study ON sample.cancerStudyIdentifier = cancer_study.cancerStudyIdentifier
        
        WHERE
        <if test="@java.util.Arrays@stream(studyIds.toArray()).distinct().count() == 1">
            cancerStudyIdentifier = #{studyIds[0]} AND
            stableId IN
            <foreach item="item" collection="sampleIds" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        <if test="@java.util.Arrays@stream(studyIds.toArray()).distinct().count() > 1">
            (cancerStudyIdentifier, sampleId) IN
            <foreach index="i" collection="sampleIds" open="(" separator="," close=")">
                (#{studyIds[${i}]}, #{sampleIds[${i}]})
            </foreach>
        </if>
        <if test="@java.util.Arrays@stream(studyIds.toArray()).distinct().count() == 0">
            FALSE
        </if>
    </select>
</mapper>
