<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.mskcc.cbio.portal.persistence.GDDMapper">

<cache/>

<insert id="insertGddData" parameterType="map" useGeneratedKeys="true" keyProperty="stable_id" keyColumn="stable_id">
    insert into gdd (SAMPLE_ID, CLASSIFICATION)
    values (#{sample_id},#{classification})
</insert>

<select id="getGddData" resultType="String">
    select 
        gdd.CLASSIFICATION
    from gdd
    where gdd.SAMPLE_ID in <foreach item="item" collection="stable_ids" open="(" separator="," close=")">#{item}</foreach>
</select>

</mapper>