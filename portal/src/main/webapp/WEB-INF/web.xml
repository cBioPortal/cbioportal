<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <!-- general settings -->

    <session-config>
      <session-timeout>720</session-timeout>
    </session-config>
    <mime-mapping>
        <extension>wsdl</extension>
        <mime-type>text/xml</mime-type>
    </mime-mapping>
    <welcome-file-list>
        <welcome-file>index.do</welcome-file>
    </welcome-file-list>
    <display-name>Cancer Genomics Portal</display-name>

    <!-- db connection pools -->

    <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/cbioportal-gdac</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/cgds_gdac</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/cgds_public</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
    </resource-ref>

    <!-- context configuration -->
    <!-- jndi profile is defined here to prevent exceptions during war deployment -->
    <context-param>
        <param-name>spring.profiles.active</param-name>
        <param-value>jndi,${authenticate}</param-value>
    </context-param>
    <context-param>  
        <param-name>spring.liveBeansView.mbeanDomain</param-name>  
        <param-value>jndi,${authenticate}</param-value>  
    </context-param> 

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext-security.xml classpath:applicationContext-business.xml</param-value>
	</context-param>

    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>${app.name}.${timestamp}</param-value>
    </context-param>

    <context-param>
      <param-name>log4jConfigLocation</param-name>
      <param-value>file://${PORTAL_HOME}/log4j.properties</param-value>
    </context-param> 

    <!-- listeners -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!-- Required by the Apache FileUpload tool. -->
    <listener>
        <listener-class>
            org.apache.commons.fileupload.servlet.FileCleanerCleanup
        </listener-class>
    </listener>
    <!-- custom location for log4j config -->
    <listener>
      <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>

    <!-- filters -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
      <filter-name>springSecurityFilterChain</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>FileUpload</filter-name>
        <display-name>File Upload</display-name>
        <description>
            Applied to file upload requests.
            Wraps the request, allowing it to be used as a regular request, 
            'as if' it were parsed by the Servlet API.
        </description>
        <filter-class>org.mskcc.cbio.portal.util.FileUploadFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>FileUpload</filter-name>
        <url-pattern>/netviz.jsp</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>FileUpload</filter-name>
        <url-pattern>/oncoprint_converter.svg</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>XssFilter</filter-name>
        <display-name>Xss Filter</display-name>
        <description>
            Applied to all requests to filter out malicious XSS attacks.
            Wraps the request, allowing it to be used as a regular request,
            'as if' it were parsed by the Servlet API.
        </description>
        <filter-class>org.mskcc.cbio.portal.util.XssFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>XssFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

