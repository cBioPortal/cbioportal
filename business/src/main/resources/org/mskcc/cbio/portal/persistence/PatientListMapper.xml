<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.mskcc.cbio.portal.persistence.PatientListMapper">

<resultMap id="PatientListResult" type="DBPatientList">
    <id property="internal_id" column="LIST_ID"/>
    <result property="id" column="STABLE_ID"/>
    <result property="name" column="NAME"/>
    <result property="description" column="DESCRIPTION"/>
    <result property="internal_study_id" column="CANCER_STUDY_ID"/>
    <collection property="internal_patient_ids" column="LIST_ID" javaType="ArrayList"
        ofType="Integer" select="selectList"/>
</resultMap>

<select id="selectList" parameterType="Integer" resultType="Integer">
    select PATIENT_ID from patient_list_list where LIST_ID = #{LIST_ID}
</select>

<select id="byStableId" resultMap="PatientListResult" parameterType="list">
    select * from patient_list
    where STABLE_ID in
    <foreach item="item" collection="ids" open="(" separator="," close=")">
        #{item}
    </foreach>
</select>

<select id="byInternalId" resultMap="PatientListResult" parameterType="list">
    select * from patient_list
    where LIST_ID in
    <foreach item="item" collection="ids" open="(" separator="," close=")">
        #{item}
    </foreach>
</select>

<select id="byInternalStudyId" resultMap="PatientListResult" parameterType="list">
    select * from patient_list
    where CANCER_STUDY_ID in
    <foreach item="item" collection="ids" open="(" separator="," close=")">
        #{item}
    </foreach>
</select>

<select id="getAll" resultMap="PatientListResult">
    select * from patient_list
</select>
    
</mapper>